{
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.8.0",
    "zod": "npm:zod@^3.24.2"
  },
  "workspace": ["./shared", "./notion"],
  "lint": {
    "rules": {
      "tags": ["recommended"],
